<% var title='' ; if (page.category) title=page.category; if (page.tag) title=page.tag; if (page.archive){ if
  (page.year) title=page.year + (page.month ? '/' + page.month : '' ); else title="Archives" ; } %>
  <% if(title) { %>
    <h3>Posts sobre el tema: <%- title %>
    </h3>
    <% } %>
      <% page.posts.each(function(item){ %>

        <article>
          <div class="row">

            <div class="three columns left lit">
              <p class="bottom">
                <%- full_date(item.date, 'L' ) %>
                <%- full_date(item.date, 'LT' ) %>
              </p>
            </div>
            <div class="nine columns left mb-3">
              <a href="<%- url_for(item.path) %>">
                <% if (item.title=="" ) { %>
                  (Sin t√≠tulo)
                  <% } else { %>
                    <%- item.title %>
                      <% } %>
              </a>
            </div>
          </div>
        </article>

        <% }); %>
          <%- partial('partial/pagination') %>